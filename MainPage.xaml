<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="final_work.MainPage"
             Title="Kirjautuminen">

    <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="Center">

        <Image Source="hr.png" HeightRequest="150"/>

        <Label Text="Kirjaudu sisään" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="kayttajatunnusEntry" Placeholder="Käyttäjätunnus" Keyboard="Text" MaximumWidthRequest="300" />

        <Entry x:Name="salasanaEntry" Placeholder="Salasana" IsPassword="True" MaximumWidthRequest="300"/>

        <Button Text="Kirjaudu" Clicked="KirjauduPainettu" MaximumWidthRequest="300"/>

        <Label x:Name="virheIlmoitusLabel" TextColor="Red" IsVisible="False" FontSize="12" HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>
